@{
    

}
@model IEnumerable<Brand>

@{
    var count = 1;
}

<div class="card-body">
    @if (Model is not null && Model.Count() > 0)
    {
        <table style="font-size:30px;">
            <thead>
                <tr>
                    <th>Sıra</th>
                    <th>İsim</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(count++)</td>
                        <td>@item.Name</td>
                      
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">Herhangi bir brand bilgisi bulunamadı !</p>
    }
</div>
