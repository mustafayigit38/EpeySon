@{
}
@model PhoneRequest_VM
<div>
    <div id="giris">

        <div id="uye_giris" class="uye_giris">
            <form method="post" action="@Url.Action("Create","Phone")" enctype="multipart/form-data">
                <p style="font-size:24px;">Akıllı telefon oluştur</p>
                <div style="display:none" class="mesaj"></div>
                <input class="uye_parola uyelik_alan" asp-for="Name" placeholder="phone name"><br>
                <input class="uye_parola uyelik_alan" asp-for="Seller" placeholder="Seller name"><br>
                <input type="number" class="uye_parola uyelik_alan" asp-for="Price" placeholder="Price"><br>
                <div style="margin-top:10px;">
                    <h1>
                        Battery specs
                    </h1>

                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneBatterySpecs.BatteryCapacity" placeholder="Battery Capacity"><br>
                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneBatterySpecs.ChargingSpeed" placeholder="Charging Speed"><br>
                    <label><input style="display:inline-block; margin-left:10px;" asp-for="PhoneBatterySpecs.FastCharging" type="checkbox" value="" />Phone has fast charging</label>
                </div>
                <div style="margin-top:10px;">
                    <h1>
                        Camera specs
                    </h1>

                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneCameraSpecs.CameraResolution" placeholder="Camera resoulution"><br>
                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneCameraSpecs.CameraZoom" placeholder="Camera zoom"><br>
                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneCameraSpecs.CameraFps" placeholder="Camera fps"><br>
                </div>

                <div style="margin-top:10px;">
                    <h1>
                        Screen specs
                    </h1>

                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneScreenSpecs.ScreenSize" placeholder="Screen size"><br>
                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneScreenSpecs.ScreenResolution" placeholder="Screen Resoulution"><br>
                    <input type="number" class="uye_parola uyelik_alan" asp-for="PhoneScreenSpecs.ScreenRefreshRate" placeholder="Screen RefreshRate"><br>
                    <select asp-for="PhoneScreenSpecs.ScreenFeature" asp-items="ViewBag.Enums"></select>
                </div><br />
                <br />

                Ürün Resmi<input type="file" asp-for="PhotoFile" /><br>


                Kategori Seç <select asp-for="Category" asp-items="ViewBag.Categories"></select><br>
                Marka Seç <select asp-for="Brand" asp-items="ViewBag.Brands"></select><br>
                <button class="giris epey-giris" type="submit" id="adg845">Kaydet</button><br>
            </form>
        </div>
    </div>
</div>



