@using WebApplication1.ViewModels

@if (CompareItems.CompareItemId.Count != 0)
{
	<div id="altbar" style="display: block;">
		<div id="kiyasla">

			<span style="margin-top:5px"><strong>Karşılaştır (@CompareItems.CompareItemId.Count)</strong></span>

			<a class="@(CompareItems.CompareItemId.Count > 1 ?"button":"button disabledbutton") asp-controller="Product" asp-action="CompareProducts">Seçilenleri Karşılaştır</a>
			<button onclick="ClearCompare()" class="button">Temizle</button>
		</div>

	</div>
}

    

