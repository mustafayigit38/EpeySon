@{
}
@if (User.Identity.IsAuthenticated)
{
    <div class="panelliste">
        <span class="sp1" style="font-size:12px">@User.FindFirst(x => x.Type == ClaimTypes.Name).Value</span>
    </div>
}
else
{
    <div class="panelliste">
        <a asp-controller="Account" asp-action="Login">
            <div class="descikon"></div>
            <span class="sp1">Giriş Yap</span>
        </a>
    </div>
}